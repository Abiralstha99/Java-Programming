import java.util.*;
public class PolygonArea {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner (System.in);
		System.out.println("Enter no of sides of polygon: ");
		int n = sc.nextInt();
		System.out.println("Enter the side: "); 
		double s = sc.nextDouble();
		double numerator = (n * Math.pow(s, 2));
		double denominator = 4 * (Math.tan(Math.PI/4));
		double ans = numerator/denominator;
		double anss=(n * Math.pow(s, 2))/(4 * (Math.tan(Math.PI/4)));
		System.out.println("The area of the polygon is: " + anss);
		
	}

}
